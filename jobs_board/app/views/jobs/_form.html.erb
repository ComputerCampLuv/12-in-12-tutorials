<div class="row">
  <div class="well col-lg-6 col-lg-offset-3">

    <%= simple_form_for @job do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Job Title ", class: "form-control" %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Job Description ", class: "form-control" %>
    </p>
    <p>
      <%= f.label :company %>
      <%= f.text_field :company, placeholder: "Company Name ", class: "form-control" %>
    </p>
    <p>
      <%= f.label :url %>
      <%= f.text_field :url, placeholder: "Link to Job Posting ", class: "form-control" %>
    </p>
    <p>
      <%= f.label :category %>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: true}, {class: "form-control"}) %>
    </p>
    <div class="pull-right">
        <%= f.button :submit, class: "form-control btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>